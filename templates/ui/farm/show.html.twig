{% extends "base.html.twig" %}

{% block body %}
    <div class="row">
    {% for product in products %}
        <div class="col-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card">
                 <div class="card-header">{{ product.name }}</div>
                 <div class="card-body">
                    <span>Prix: <strong>{{ product.priceIncludingTaxes|format_currency('EUR') }}</strong></span>
                    <div class="mt-4">
                    {{ product.description|nl2br }}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>     
    
{% endblock %}